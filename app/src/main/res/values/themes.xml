<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.KotlinApp3TEX" parent="Theme.AppCompat">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:layout_height">640dp</item>
        <item name="android:layout_width">340dp</item>
    </style>
    <style name="Titulo" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_height">114dp</item>
        <item name="android:layout_width">257dp</item>
        <item name="android:textColor">@color/txt_negro</item>
        <item name="android:fontFamily">@font/roboto_condensed_bold</item>
        <item name="android:textSize">48dp</item>
        <item name="android:textAlignment">center</item>
