    <style name="CancelButton" parent="@android:style/TextAppearance.Medium">
        <item name="android:background">@drawable/button_background_light</item>
    </style>

    <style name="BackButton" parent="@android:style/TextAppearance.Medium">
        <item name="android:background">@drawable/button_background_light</item>
    </style>


    <style name="Theme.KotlinApp3TEX" parent="Base.Theme.KotlinApp3TEX" />
