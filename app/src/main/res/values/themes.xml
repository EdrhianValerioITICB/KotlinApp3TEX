<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.KotlinApp3TEX" parent="Theme.AppCompat">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:layout_height">640dp</item>
        <item name="android:layout_width">340dp</item>
    </style>
    <style name="Title" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_height">114dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/txt_negro</item>
        <item name="android:fontFamily">@font/roboto_condensed_bold</item>
        <item name="android:textSize">48dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="NormalButton" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/txt_negro</item>
        <item name="android:layout_width">212dp</item>
        <item name="android:layout_height">42dp</item>
        <item name="android:backgroundTint">@null</item>
        <item name="android:background">@drawable/button_background_light</item>
        <item name="android:fontFamily">@font/roboto_condensed_regular</item>
        <item name="android:elevation">20dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="CancelButton" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/txt_negro</item>
        <item name="android:layout_width">212dp</item>
        <item name="android:layout_height">42dp</item>
        <item name="android:backgroundTint">@null</item>
        <item name="android:background">@drawable/button_background_cancel</item>
        <item name="android:fontFamily">@font/roboto_condensed_regular</item>
        <item name="android:elevation">20dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="WaitingText" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_height">114dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/txt_negro</item>
        <item name="android:fontFamily">@font/roboto_condensed_bold</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ShortBodyText" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/txt_negro</item>
        <item name="android:layout_width">224dp</item>
        <item name="android:layout_height">23dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="NumberProgression" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_height">25dp</item>
        <item name="android:textColor">@color/txt_negro</item>
        <item name="android:layout_width">224dp</item>
    </style>

    <style name="LongBodyText" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/txt_negro</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:justificationMode">inter_word</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Table" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="layout_constraintDimensionRatio">1:1</item>
    </style>

    <style name="BackButton">
        <item name="android:onClick">toBack</item>
        <item name="android:textColor">@color/txt_negro</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:drawableLeft">@drawable/ic_btn_back</item>
        <item name="android:drawablePadding">2dp</item>
        <item name="android:text">Atr√°s</item>
    </style>

    <style name="ProfileButton">
        <item name="android:onClick">toProfile</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:drawableLeft">@drawable/ic_btn_back</item>
        <item name="android:drawablePadding">2dp</item>
    </style>

    <style name="FowardButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:drawableLeft">@drawable/ic_btn_back</item>
        <item name="android:drawablePadding">2dp</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:typeface">serif</item>
        <item name="android:textColor">#0000FF</item>

        <item name="colorPrimary">@color/txt_negro</item>
        <item name="colorPrimaryDark">@color/txt_negro</item>
        <item name="colorAccent">@color/txt_negro</item>
    </style>
    <style name="Theme.KotlinApp3TEX" parent="Theme.AppCompat.Light.NoActionBar" >
    </style>


</resources>