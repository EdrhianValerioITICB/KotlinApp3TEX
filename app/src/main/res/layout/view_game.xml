<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Theme.KotlinApp3TEX"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_light">

    <ImageButton
        android:id="@+id/btn_account"
        style="@style/BackButton"
        android:layout_width="41dp"
        android:layout_height="41dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_account" />

    <ImageView
        android:id="@+id/iv_p1"
        style="@style/BackButton"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="308dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_account4" />

    <ImageView
        android:id="@+id/iv_p2"
        style="@style/BackButton"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_table"
        app:srcCompat="@drawable/ic_account4" />

    <ImageView
        android:id="@+id/iv_o"
        style="@style/BackButton"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginStart="41dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.013"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_table"
        app:srcCompat="@drawable/ic_o_extreme1" />

    <ImageView
        android:id="@+id/iv_arrow"
        style="@style/BackButton"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginStart="41dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_table"
        app:srcCompat="@drawable/ic_arrow" />

    <ImageView
        android:id="@+id/iv_x"
        android:layout_width="115dp"
        android:layout_height="115dp"
        android:layout_marginTop="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.945"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_x_extreme1" />

    <ImageButton
        android:id="@+id/btn_menu"
        style="@style/BackButton"
        android:layout_width="41dp"
        android:layout_height="41dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_menu" />

    <ImageView
        android:id="@+id/iv_table"
        style="@style/Table"
        android:layout_marginStart="36dp"
        android:layout_marginEnd="36dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/img_tutorial_one" />

    <TextView
        android:id="@+id/textView8"
        style="@style/ShortBodyText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="41dp"
        android:text="@string/player_one"
        app:layout_constraintBottom_toTopOf="@+id/iv_table"
        app:layout_constraintTop_toBottomOf="@+id/iv_p1"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="38dp" />

    <TextView
        android:id="@+id/textView9"
        style="@style/ShortBodyText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/player_two"
        app:layout_constraintTop_toBottomOf="@+id/iv_p2"
        tools:layout_editor_absoluteX="315dp" />

    <TextView
        android:id="@+id/textView10"
        style="@style/ShortBodyText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:text="@string/timer"
        app:layout_constraintStart_toEndOf="@+id/iv_p1"
        tools:layout_editor_absoluteY="64dp" />

    <TextView
        android:id="@+id/textView11"
        style="@style/ShortBodyText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="1dp"
        android:text="@string/timer"
        app:layout_constraintEnd_toStartOf="@+id/iv_p2"
        tools:layout_editor_absoluteY="555dp" />


</androidx.constraintlayout.widget.ConstraintLayout>